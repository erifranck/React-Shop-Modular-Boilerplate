@import 'normalize/index.styl'
@import 'animate.css/animate.css'
@import 'mixins/materialcolor.styl'
@import 'mixins/images.styl'
@import 'mixins/animation.styl'
body
  position absolute
  height 100%
  width 100%
  background-color clouds
.container
  margin auto
  width 80%
  height 80%
  background-color peterriver
  border-radius 20px
  margin-top 5%
  position relative
  z-index 0
  box-shadow 9px 9px 53px -6px rgba(0,0,0,0.75)
.btn-social
  position absolute
  bottom 10px
  right 10px
  border-radius 50%
  width 60px
  height 60px
  color clouds
  z-index 2
  box-shadow 9px 9px 53px -6px rgba(0,0,0,0.45)
  
.url
  &-navigation
    display inline-block
    list-style none
    color clouds
    margin 5px
  &-list
    position relative
    z-index 1
    height 20%
    padding 10px
    box-sizing border-box
.profile
  &-container
    position relative
    height 80%
    flex_order(auto,100%,center,center,center,wrap)
    
  &-entrie
    flex_order(auto,100%,center,center,center,nowrap)
    
  &-name
    margin 0
    anim_delay(1.2s)
  &-jobs
    flex_order(auto,100%,center,center,center,nowrap)
  &-job 
    font-size 14px
    margin-left 5px
.avatar
  anim_delay(0.5s)
  width 100px
  height 100px
  border-radius 50%
  z-index 1
.balloon
  position absolute
  opacity 0.8
  &-html
    left 10px
    top 10px
    balloon_position(20%,0)
  &-css 
    top 10px
    right 10px
    balloon_position(25%,0)
  &-js
    top 10px
    right 50px
    balloon_position(30%,0)
.url
  text-decoration none
  transition 0.5s
  &:hover
    font-size 1.3em    
  &-container
    flex_order(auto,100%,center,center,center,nowrap)
.aboutme
  text_urls('Sobre mi', clouds)
.contact
  text_urls('Contactos', clouds)
.skills
  text_urls('Habilidades', clouds)
.experience
  text_urls('Trabajos', clouds)

@keyframe flying
  0%  
    transform rotate(-30deg)
  100%
    transform rotate(30deg)
.fly
  animation-name flying
.field
  width 100%
  height 100%
  position absolute
  top 0
  left 0
  opacity 0.7
  z-index -1