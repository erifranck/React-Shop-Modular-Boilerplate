@import 'normalize/index.styl'
@import 'animate.css/animate.css'
@import 'mixins/materialcolor.styl'
@import 'mixins/images.styl'
body
  position absolute
  height 100%
  width 100%
  background-color clouds
main
  margin auto
  width 80%
  height 80%
  background-color peterriver
  border-radius 20px
  margin-top 5%
  box-shadow 9px 9px 53px -6px rgba(0,0,0,0.75)
.url
  &-navigation
    display inline-block
    list-style none
    color clouds
    margin 5px
  &-list
    position relative
    z-index 1
    height 20%
    padding 10px
    box-sizing border-box
.profile
  &-container
    position relative
    height 80%
    flex_order(auto,100%,center,center,center,wrap)
    
  &-entrie
    flex_order(auto,100%,center,center,center,nowrap)
    
  &-name
    margin 0
    anim_delay(1.2s)
  &-jobs
    flex_order(auto,100%,center,center,center,nowrap)
  &-job 
    font-size 14px
    margin-left 5px
.avatar
  anim_delay(0.5s)
  width 100px
  height 100px
  border-radius 50%
  z-index 1
.balloon
  position absolute
  &-html
    left 10px
    top 10px
    balloon_position(90%,0)
  &-css 
    top 10px
    right 10px
    balloon_position(95%,0)
  &-js
    top 10px
    right 50px
    balloon_position(100%,0)

.url
  text-decoration none
  transition 0.5s
  &:hover
    font-size 1.3em    
  &-container
    flex_order(auto,100%,center,center,center,nowrap)
.aboutme
  text_urls('Sobre mi', clouds)
.contact
  text_urls('Contactos', clouds)
.skills
  text_urls('Habilidades', clouds)
.experience
  text_urls('Trabajos', clouds)
    
  